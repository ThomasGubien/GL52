extends layout

block content
  .col-md-8.offset-md-2
    .card
      .card-header
        strong Quiz List
      .card-body.card-block
        .text-center
          table.table
            thead
              tr
                th(scope='col') #
                th(scope='col') Title
                th(scope='col') Groups
                th(scope='col') Action
            tbody
              for q in quiz
                tr
                  td.t(style='width:20%')= q._id
                  td= q.title
                  td
                    for g in q.groups
                      a #{g} /
                  td.t(style='width:20%')
                    button.btn.btn-warning.btn-sm(type='modify')
                      i.fa.fa-pencil
                    button.btn.btn-danger.btn-sm(type='delete')
                      i.fa.fa-trash
                    button.btn.btn-dark.btn-sm(type='close')
                      i.fa.fa-ban