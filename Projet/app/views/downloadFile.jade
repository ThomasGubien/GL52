extends layout

block content
  .col-md-8.offset-md-2
    .card
      .card-header
        strong Files List
      .card-body.card-block
        .text-center
          table.table
            thead
              tr
                th(scope='col') #
                th(scope='col') Title
                th(scope='col') Action
              tbody
                for f in files
                  tr
                    td.t(style='width:20%')= f._id
                    td= f.name
                    td.t(style='width:30%')
                      button.btn.btn-primary.btn-sm(type='Download').t(style='width:100%')
                        i.fa.fa-download
                        a Download