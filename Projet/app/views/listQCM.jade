extends layout

block content
  .breadcrumbs
    .col-sm-4
      .page-header.float-left
        .page-title
          h1 #{title}
    .col-sm-8
      .page-header.float-right
        .page-title
          ol.breadcrumb.text-right
            li.active #{title}
  .col-md-6.offset-md-3
    .card
      .card-header
        strong QCM List
      .card-body.card-block
        table.table
          thead
            tr
              th(scope='col') #
              th(scope='col') Title
              th(scope='col') Author
          tbody
            tr(id='list')