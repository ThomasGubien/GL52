extends layout

block content
  .col-md-6
    .card
      .card-header
        strong Groupes affect√© au questionnaire
      .card-body.card-block
        table.table
          thead
            tr
              th(scope='col') #
              th(scope='col') Nom Groupe
              th(scope='col') Gestionnaire
              th(scope='col') Actions
          tbody
            for group in affectedGroups
              tr
                td= group._id
                td= group.title
                td= group.uv
                td.t(style='width:20%')
                  button.btn.btn-warning.btn-sm(type='modify')
                    i.fa.fa-pencil
                  button.btn.btn-danger.btn-sm(type='delete')
                    i.fa.fa-trash
                  button.btn.btn-dark.btn-sm(type='close')
                    i.fa.fa-ban
